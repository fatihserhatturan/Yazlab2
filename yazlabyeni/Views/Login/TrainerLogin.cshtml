@{
    ViewData["Title"] = "TrainerLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Antrenör Girişi</h1>

<form action="TrainerLogin" method="post">

    <div class="container">
        <label for="uname"><b>E-mail</b></label>
        <input type="text" placeholder="E-mail Girin" name="Mail" required>

        <label for="psw"><b>Şifre</b></label>
        <input type="password" placeholder="Şifre Girin" name="Password" required>

        <button type="submit">Giriş Yap</button>
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Login", "Login")'">Kullanıcı Girişi</button>
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("ForgotPassword", "Login")'">Forgot Password</button>
    </div>

</form>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    .container {
        width: 400px;
        padding: 1px ;
        background-color: #f5f5f5;
        margin: 100px auto;
       
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 10px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid #ccc;
        outline: none;
    }

    input[type=submit] {
        width: 100%;
        padding: 14px 20px;
        margin: 8px 0;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    .forgot-password {
        text-align: right;
        margin-top: 10px;
    }

        .forgot-password a {
            color: #666;
            text-decoration: none;
        }

            .forgot-password a:hover {
                color: #444;
            }
</style>
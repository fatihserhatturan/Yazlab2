@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model EntityLayer.Concrete.UserInfo;

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card custom-card">
                <img src="/Images/fatrate.jpg" class="card-img-top" alt="Card Image" style="width: 100%; height: 200px;">
                <div class="custom-overlay">
                    <i class="fas fa-heart custom-icon"></i>
                    <h5 class="mt-3">Yağ Oranı: @Model.FatRate%</h5>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card custom-card">
                <img src="/Images/givencalories.jpg" class="card-img-top" alt="Card Image" style="width: 100%; height: 200px;">
                <div class="custom-overlay">
                    <i class="fas fa-utensils custom-icon"></i>
                    <h5 class="mt-3">Alınan Kalori: @Model.WeeklyCalories</h5>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card custom-card">
                <img src="/Images/train.jpg" class="card-img-top" alt="Card Image" style="width: 100%; height: 200px;">
                <div class="custom-overlay">
                    <i class="fas fa-fire custom-icon"></i>
                    <h5 class="mt-3">Yakılan Kalori : @Model.WeeklyCalories</h5>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="chart-container">
                <canvas id="myChart"></canvas>
            </div>
        </div>

    </div>

</div>

<br />

<canvas style="height:800px; width:1500px" id="myChart"></canvas>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"> </script>
<script>
    const xValues = ["hafta1", "hafta2", "hafta3", "hafta3", "hafta4", "hafta5", "hafta6", "hafta7", "hafta8"];
    const yValues = [7, 8, 8, 9, 9, 9, 10, 11, 14, 14, 15];

    const myChart = new Chart("myChart", {
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: "rgba(0,0,255,1.0)",
                borderColor: "rgba(0,0,255,0.1)",
                data: yValues
            }]
        },
        options: {
            legend: { display: false },
            scales: {
                yAxes: [{ ticks: { min: 6, max: 16 } }],
            }

        }
    });
</script>


<style>
    /* Özel stil tanımlamaları */
    .custom-card {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        transition: transform 0.3s;
        height: 200px; /* Sabit yükseklik değeri */
    }

        .custom-card:hover {
            transform: scale(1.05);
        }

        .custom-card img {
            width: 100%;
            height: auto;
            object-fit :cover;
        }

    .custom-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .custom-card:hover .custom-overlay {
        opacity: 1;
    }

    .custom-icon {
        font-size: 2em;
    }


    .bar {
        width: 100%;
        height: 30px;
        background-color: #007bff;
        margin-top: 10px;
    }

    .chart-container {
        width: 100%;
        height: 500px; /* Adjust the height as needed */
        margin-top: 20px; /* Adjust the margin-top as needed */
    }
</style>

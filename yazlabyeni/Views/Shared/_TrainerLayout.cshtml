
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - yazlabyeni</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/yazlabyeni.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

</head>
<body>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Images/logo.jpg" alt="" style="width: 45px; height: 45px;" />
                    FitLife
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fas fa-home"></i>  Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login"> <i class="fas fa-door-open"></i> Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="sidebar">
        
        <a asp-controller="Trainer" asp-action="Index"><i class="fas fa-user"></i> Profil</a>
        <a asp-controller="Trainer" asp-action="TrainerUserApplication"><i class="fas fa-people-arrows"></i> Danışanlarım</a>
        <a asp-controller="Trainer" asp-action="TrainerDefaultDiets"><i class="fas fa-utensils"></i> Diyet Programlarım</a>
        <a asp-controller="Trainer" asp-action="TrainerDefaultExercises"><i class="fas fa-dumbbell"></i> Egzersiz Programlarım</a>
        <a asp-controller="Trainer" asp-action="UserMessages"><i class="fas fa-envelope"></i> Mesajlar</a>

    </div>

    <div class="container" style="margin-left: 250px; padding-top: 20px;">
        <!-- Add the margin-left and padding-top to ensure content is not hidden behind the sidebar -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

<style>
    body {
        margin: 0;
        padding: 0;
    }

    #sidebar {
        height: 100%;
        width: 250px;
        position: fixed;
        background-color: #fff;
        padding-top: 20px;
    }

        #sidebar a {
            padding: 15px 10px;
            text-decoration: none;
            font-size: 18px;
            color: #818181;
            display: block;
        }

            #sidebar a:hover {
                color: #f1f1f1;
            }

    .container {
        margin-left: 50px; /* Keep the same margin as the sidebar width */
        padding-top: 1px; /* Match the padding-top of the sidebar */
        padding-right: 15px; /* Adjust for the body padding */
        padding-left: 15px; /* Adjust for the body padding */
    }

    main {
        padding: 16px;
    }
</style>

</html>

@model EntityLayer.Concrete.ExerciseList

@{
    ViewData["Title"] = "DietPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .diet-container {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .diet-item {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
    }

        .diet-item i {
            margin-right: 10px;
        }

    h2 {
        color: #007bff;
    }
</style>

<div class="container diet-container">
    <h2>@Model.Name</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="diet-item">
                <i class="fas fa-dumbbell fa-2x"></i>
                <strong> Set Sayısı:</strong>
                <p>@Model.Set</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="diet-item">
                <i class="fas fa-bullseye fa-2x"></i>
                <strong>Egzersiz Hedefi:</strong>
                <p>@Model.Target</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="diet-item">
                <i class="fas fa-audio-description fa-2x"></i>
                <strong>Egzersiz Açıklaması:</strong>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="diet-item">
                <i class="fas fa-video fa-2x"></i>
                <strong>Nasıl Yapılır:</strong>
                <div style="position:relative; width:100%; height:0; padding-bottom:56.25%;">
                    <iframe width="100%"
                            height="100%"
                            src="@Model.ExerciseVideo"
                            frameborder="0"
                            allowfullscreen
                            style="position:absolute; top:0; left:0; width:100%; height:100%;"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

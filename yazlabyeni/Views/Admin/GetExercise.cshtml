
@{
    ViewData["Title"] = "GetExercise";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@model EntityLayer.Concrete.ExerciseList


<h2>Edit Exercise</h2>

@using (Html.BeginForm("UpdateExercise", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ExerciseListId)

    <div class="form-group">
        <label for="Target">Target:</label>
        <input type="text" class="form-control" id="Target" name="Target" value="@Model.Target">
    </div>

    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="Set">Set:</label>
        <input type="text" class="form-control" id="Set" name="Set" value="@Model.Set">
    </div>

    <div class="form-group">
        <label for="ExerciseVideo">Exercise Video:</label>
        <input type="text" class="form-control" id="ExerciseVideo" name="ExerciseVideo" value="@Model.ExerciseVideo">
    </div>

    <button type="submit" class="btn btn-primary">Update Exercise</button>
}



